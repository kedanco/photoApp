<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h1>Edit Album</h1>
       
       <%= form_for @album, url: album_path, method: :put do |f| %>
        
          <div class="form-group">
            <%= f.label   :title , class: "control-label col-sm-2" %>
          </div>
          
          <div class="col-sm-8 col-sm-offset-2">
            <%= f.text_field :title , class: "form-control" %>
          </div>
      
          <div class="form-group">
            <%= f.label :description , class: "control-label col-sm-2" %>
          </div>

          <div class="col-sm-8 col-sm-offset-2">
            <%= f.text_field :description , class: "form-control " %>
          </div>

          <div id="newButtons">
            <%= link_to 'Back to Albums', user_path(id: current_user.id), class: "btn btn-primary pull-left" %>  
            <%= f.submit "Update" , class: "btn btn-success pull-right" %>
          </div>

      <% end %>

  </div>
</div>

          <script>
            var form = document.getElementById("edit_album");
            form.className += " form-horizontal";
          </script>


          