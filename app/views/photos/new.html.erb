 
<div class="row">
  <div class="col-md-4 col-md-offset-4">
       <h1>Upload new Photo</h1>
       
       <%= form_for @photo, url:album_photos_path(id: @album.id), method: :post do |f| %>

      <div class="form-group">
        <%= f.label   :caption , class: "control-label col-sm-2"%>
        <div class="col-sm-8 col-sm-offset-2"><%= f.text_field :caption , class: "form-control"  %></div>
      </div>
      <div class="form-group">
        <%= f.label :image , class: "control-label col-sm-2" %>
       <div class="col-sm-8 col-sm-offset-2"> <%= f.file_field :image , class: "form-control "  %></div>
      </div>


      <div id="newButtons">

      <%= link_to 'Back to Photos', album_path(id: @album.id), class: "btn btn-primary pull-left" %>  

      <%= f.submit "Create" , class: "btn btn-success pull-right" %>
        
      </div>

      <% end %>

      
  </div>
</div>

  <script>

        var form = document.getElementById("new_photo");
        form.className += " form-horizontal";

  </script>
