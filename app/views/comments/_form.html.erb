<%= form_for @comment, :remote => true do |f| %>

    <div class="form-group">
     <div class="col-sm-10"> <%= f.text_area :text , class: "form-control", placeholder: "Comment here  "  %></div>
    </div>

    <% unless current_page?(controller: 'comments', action: 'edit') %> 
    <!-- If editing comment page, values present & no need hidden fields -->
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.hidden_field :photo_id, :value => @photo.id %>
    <% end %>

    <div class="commentForm">

      <%= f.submit "Add Comment" , class: "btn btn-success " %>
      
    </div>

<% end %>
